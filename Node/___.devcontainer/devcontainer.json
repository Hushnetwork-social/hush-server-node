{
	"name": "C# (.NET): HushServerNode",
	"image": "mcr.microsoft.com/dotnet/sdk:8.0",

	"appPort": ["4665:4665"],
	"postCreateCommand": "docker network connect myDatabaseNetwork HushServerNode",

	"runArgs": [
		"--network=hushNetwork",
		"--name", "HushServerNode"
	],

	"workspaceFolder": ".",

	"mounts": [
        "source=${localWorkspaceFolder}/../Protos,target=/workspaces/Protos,type=bind",
		"source=${localWorkspaceFolder}/../Modules,target=/workspaces/Modules,type=bind",
    ],

	"customizations": {
		"vscode": {
			"extensions": [
				"ms-dotnettools.csdevkit",
				"ms-vscode-remote.remote-containers"
			]
		}
	}
}
