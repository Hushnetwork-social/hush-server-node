{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.EntityFrameworkCore": "Warning",
            "HushNode.Notifications": "Warning",
            "HushNode.Feeds": "Warning",
            "Olimpo": "Warning"
        }
    },

    "BlockchainSettings": {
        "MaxEmptyBlocksBeforePause": 5
    },

    "Redis": {
        "ConnectionString": "HushNetworkRedis:6379",
        "InstanceName": "HushFeeds:",
        "ConnectRetry": 3,
        "ConnectTimeout": 5000,
        "SyncTimeout": 5000,
        "Enabled": true
    },

    "ServerInfo": {
        "ListeningPort": 4665
    },

    "ConnectionStrings": {
        "HushNetworkDb": "Host=HushNetworkPostgreSQL;Database=HushNetworkDb;Username=HushNetworkDb_USER;Password=CHANGE_ME_IN_PRODUCTION;"
    },

    "CredentialsProfile": {
        "CredentialsFile": "./stacker-credentials.dat",
        "CredentialsPasswordEnvVar": "HUSH_CREDENTIALS_PASSWORD"
    },

    "Firebase": {
        "ProjectId": "hushnetwork",
        "ServiceAccountPath": "./firebase-sa.json",
        "Enabled": true
    }
}
